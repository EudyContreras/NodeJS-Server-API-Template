{
    "extends": "stylelint-config-sass-guidelines",
    "plugins": [
        "stylelint-scss",
		"stylelint-order"
	],
    "rules": {
        "indentation": "tab",
        "number-leading-zero": null,
        "order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order": [
			"width",
			"height"
		]
    }
}